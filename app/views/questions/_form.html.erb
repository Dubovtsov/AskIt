<%= form_with model: @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true, minlength: 2, placeholder: "Title" %>
    
    <%= f.label :body %>
    <%= f.text_area :body, required: true, minlength: 2, placeholder: "Body" %>

    <%= f.submit "Обновить" %>
  </div>
 
<% end %>