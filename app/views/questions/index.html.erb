<h1>Questions</h1>
<h3>Добрый день, <%= @name %></h3>

  <% @questions.each do |question| %>

  <h1>
    <%= question.title %>
  </h1>

  <time datetime="<%= question.formatted_created_at %>"><%= question.formatted_created_at %></time>

  <p>
    <%= question.body %>
  </p>

  <%= link_to 'Edit', edit_question_path(question) %> | 
  <%= link_to 'Destroy', question_path(question), method: :delete %>
  <%= button_to "Delete", question_path(question), method: :delete %>
  <hr>

  <% end %>

